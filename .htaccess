# ============================================================
# Rotulate Publicidad - Security & Performance Headers
# Hostinger (LiteSpeed) compatible
# ============================================================

# --- Security Headers ---
<IfModule mod_headers.c>
    # Content Security Policy (refuerza la meta tag del HTML)
    Header set Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self' https://fonts.googleapis.com 'unsafe-inline'; font-src https://fonts.gstatic.com; img-src 'self' data: https://ucarecdn.com; connect-src 'self' https://formspree.io; frame-ancestors 'none'; form-action 'self' https://formspree.io; base-uri 'self'; object-src 'none'; worker-src 'none'; upgrade-insecure-requests"

    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"

    # Clickjacking protection
    Header set X-Frame-Options "DENY"

    # XSS Protection (legacy browsers)
    Header set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Permissions Policy - restrict browser features
    Header set Permissions-Policy "camera=(), microphone=(), geolocation=(), payment=()"

    # Strict Transport Security (HTTPS only)
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"

    # Prevent information leakage
    Header unset X-Powered-By
    Header unset Server
</IfModule>

# --- Force HTTPS ---
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# --- Cache Control ---
<IfModule mod_expires.c>
    ExpiresActive On

    # Images: 1 month
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"

    # Fonts: 1 year
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"

    # CSS/JS: 1 week
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"

    # HTML: no cache (always fresh)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# --- Compression ---
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json image/svg+xml
</IfModule>

# --- Block access to sensitive files ---
<FilesMatch "\.(htaccess|htpasswd|env|git|gitignore|md)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# --- Prevent directory listing ---
Options -Indexes

# --- Custom error pages (optional, prevents info leaks) ---
ErrorDocument 404 /index.html
